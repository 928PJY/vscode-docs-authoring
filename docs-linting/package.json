{
  "name": "docs-linting",
  "displayName": "docs-linting",
  "description": "Docs Linting Extension",
  "icon": "images/docs-logo-ms.png",
  "version": "0.0.3",
  "publisher": "docsmsft",
  "homepage": "https://github.com/Microsoft/vscode-docs-authoring/tree/master/docs-linting",
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-docs-authoring/issues"
  },
  "engines": {
    "vscode": "^1.22.0"
  },
  "repository": {
    "url": "https://github.com/Microsoft/vscode-docs-authoring.git"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "linting"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension",
  "commands": [],
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test-core": "node ./node_modules/vscode/bin/test",
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "markdownlint": "^0.11.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.12",
    "@types/node": "^7.10.5",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "mocha": "^7.1.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.20.1",
    "terser-webpack-plugin": "^2.3.5",
    "ts-loader": "^6.2.2",
    "typescript": "3.4.5",
    "vscode": "^1.1.33",
    "webpack": "^4.42.1",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-cli": "^3.3.11"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text-summary",
      "cobertura",
      "html"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ]
  },
  "jest-junit": {
    "output": "test-results-jest.xml",
    "usePathForSuiteName": "true"
  },
  "license": "MIT"
}